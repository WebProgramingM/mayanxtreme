.box-inner
	position: absolute;
	height: 80%;
	width: 100%;
	left 0
	top: 0
	overflow: hidden;
	
.the-content-box
	position: relative;
	height: 100%;
	width: 100%;
	background: $balckmaya
	color: white;
	transform: translateY(70%);
	transition: all 600ms ease;
	h1
		padding: 0.2em 0em 0em 0em;
		margin: 0;
		font-family: helvetica;
		transition: all 400ms ease;
	
	hr
		background: #4A89CD;
		height: 3px;
		border: none;
		margin: 1em 0em 0em 0em;
		width: 0;
		transition: all 400ms ease;
	
	p
		letter-spacing: 1px;
		opacity: 0;
		font-family: arial !important;
		transition: all 900ms ease;
		transform: translateY(40%);
		font-weight: lighter;
	
	a
		display: inline-block;
		width 300px
		height 60px
		line-height 60px
		text-align center
		border 1px solid white
		border-radius 50px
		color: white !important;
		text-decoration: none;
		font-weight: bolder;
		position: relative;
		transition: all 600ms ease;
		opacity: 0;
		transform: translateX(20%);
		&:hover
			background: #1B324B;
	
.content-box-inner
	padding: 0em 1em;

.box-footer
	position: absolute;
	height: 80%;
	width: 100%;
